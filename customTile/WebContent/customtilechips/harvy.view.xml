<?xml version="1.0" encoding="UTF-8"?>
<core:View 
		xmlns="sap.suite.ui.commons" 
		xmlns:ui="sap.suite.ui.commons" 
		xmlns:core="sap.ui.core" 
		controllerName="customtilechips.harvy">
		
     <GenericTile 
  	 	id="harvyMicro"
	 	press="onPress" 
	 	header="{/config/display_title_text}" 
	 	subheader="{/config/display_subtitle_text}" 
	 	frameType="TwoByOne">
        <tileContent>
        	<TileContent footer="{/config/display_info_text}">
            	<content>
                	<ui:HarveyBallMicroChart  total="500" size="M"  totalScale="Min" showTotal="true" showFractions="true">
					<ui:items>
					<ui:HarveyBallMicroChartItem fraction="100" color="Good" fractionScale="Min"/>
					<ui:HarveyBallMicroChartItem fraction="20" color="Error" fractionScale="Min"/>
					</ui:items>	
				
					</ui:HarveyBallMicroChart>
				</content>
			</TileContent>
		</tileContent>
	</GenericTile>
	
</core:View>